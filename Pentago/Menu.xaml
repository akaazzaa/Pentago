        <TextBlock HorizontalAlignment="Center" Margin="0,67,0,0" Text="Pentago"  VerticalAlignment="Top" Height="123" Width="448" FontSize="72" TextAlignment="Center" FontFamily="Comic Sans MS" FontWeight="Bold" />


    </Grid>
