                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="1426,867,0,0" VerticalAlignment="Top" Height="50" Width="78"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="1320,958,0,0" VerticalAlignment="Top" Height="66"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="442,882,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="582,958,0,0" VerticalAlignment="Top" Height="96" Width="80" RenderTransformOrigin="0.475,0.542"/>

    </Grid>
</UserControl>
